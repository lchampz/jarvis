{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --hot src/index.tsx",
    "dev:api": "bun --hot api/server.ts",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "bun run build.ts",
    "db:up": "cd api && docker-compose up -d",
    "db:down": "cd api && docker-compose down",
    "db:reset": "cd api && docker-compose down -v && docker-compose up -d",
    "prisma:generate": "cd api && bunx prisma generate",
    "prisma:migrate": "cd api && bunx prisma migrate dev",
    "prisma:studio": "cd api && bunx prisma studio"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@hookform/resolvers": "^5.2.1",
    "@prisma/client": "^6.14.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "add": "^2.0.6",
    "bun-plugin-tailwind": "^0.0.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "elysia": "^1.3.8",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.539.0",
    "next-themes": "^0.4.6",
    "prisma": "^6.14.0",
    "react": "^19",
    "react-dom": "^19",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "^7.8.1",
    "shadcn-ui": "^0.9.5",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "yup": "^1.7.0",
    "zustand": "^5.0.7"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19"
  }
}